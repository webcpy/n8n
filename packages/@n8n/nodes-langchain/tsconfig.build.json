{
	"extends": ["./tsconfig.json"],
	"compilerOptions": {
		"types": ["node"],
		"noEmit": false,
		"declaration": true,
		"outDir": "dist",
		"tsBuildInfoFile": "dist/build.tsbuildinfo"
	},
	"include": [
		"credentials/**/*.ts",
		"nodes/**/*.ts",
		"nodes/**/*.json",
		"nodes_zh/**/*.ts",
		"nodes_zh/**/*.json",
		"credentials/translations/**/*.json"
	],
	"exclude": ["nodes/**/*.test.ts", "nodes_zh/**/*.test.ts", "test/**"]
}
